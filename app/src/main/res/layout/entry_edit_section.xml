<com.android.keepass.view.EntryEditSection xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_background">

    <EditText
        android:id="@+id/title"
        style="@style/Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/field_name"
        android:inputType="text"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:onClick="deleteAdvancedString"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_delete" />

    <CheckBox
        android:id="@+id/protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="@string/protection" />

    <EditText
        android:id="@+id/value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/protection"
        android:hint="@string/field_value"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/divider_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/value"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />
</com.android.keepass.view.EntryEditSection>